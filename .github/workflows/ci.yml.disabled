name: CI

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

env:
  CARGO_TERM_COLOR: always

jobs:
  test:
    name: Test
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
      with:
        components: rustfmt, clippy
    
    - name: Cache dependencies
      uses: actions/cache@v3
      with:
        path: |
          ~/.cargo/registry
          ~/.cargo/git
          target
        key: ${{ runner.os }}-cargo-${{ hashFiles('**/Cargo.lock') }}
    
    - name: Check formatting
      run: cargo fmt --all -- --check
    
    - name: Run clippy (warnings allowed)
      run: cargo clippy --all-targets --all-features
      continue-on-error: true
    
    - name: Run tests
      run: cargo test --verbose
    
    - name: Build release
      run: cargo build --release --verbose

  docker:
    name: Docker Build and Deploy
    runs-on: ubuntu-latest
    needs: test
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3
    
    - name: Build Docker image
      run: docker build -t crabcache:latest .
    
    - name: Test Docker image
      run: |
        docker run --rm -d --name crabcache-test -p 8000:8000 -p 9090:9090 crabcache:latest
        sleep 5
        docker logs crabcache-test
        docker stop crabcache-test
    
    - name: Login to Docker Hub
      if: secrets.DOCKER_USERNAME != '' && secrets.DOCKER_PASSWORD != ''
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}
    
    - name: Build and push to Docker Hub
      if: secrets.DOCKER_USERNAME != '' && secrets.DOCKER_PASSWORD != ''
      uses: docker/build-push-action@v5
      with:
        context: .
        push: true
        tags: |
          ${{ secrets.DOCKER_USERNAME }}/crabcache:latest
          ${{ secrets.DOCKER_USERNAME }}/crabcache:main-${{ github.sha }}
        platforms: linux/amd64,linux/arm64
        cache-from: type=gha
        cache-to: type=gha,mode=max
    
    - name: Docker deployment status
      run: |
        if [ -n "${{ secrets.DOCKER_USERNAME }}" ] && [ -n "${{ secrets.DOCKER_PASSWORD }}" ]; then
          echo "‚úÖ Docker image deployed to Docker Hub"
          echo "üê≥ Image: ${{ secrets.DOCKER_USERNAME }}/crabcache:latest"
          echo "üè∑Ô∏è  Tag: ${{ secrets.DOCKER_USERNAME }}/crabcache:main-${{ github.sha }}"
        else
          echo "‚ö†Ô∏è  Docker secrets not configured - skipping deployment"
          echo "üìã To enable Docker deployment, configure:"
          echo "   - DOCKER_USERNAME (your Docker Hub username)"
          echo "   - DOCKER_PASSWORD (your Docker Hub token)"
        fi